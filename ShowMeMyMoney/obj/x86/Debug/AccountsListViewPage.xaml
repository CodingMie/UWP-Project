<Page x:ConnectionId='1'
    x:Class="ShowMeMyMoney.AccountsListViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShowMeMyMoney"
    xmlns:md="using:ShowMeMyMoney.Model"
    xmlns:cv="using:ShowMeMyMoney.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Text="分类收支详情" FontSize="28"/>

            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="5" Width="80">
                    <TextBlock HorizontalAlignment="Center" Text="Categories" Height="50"/>

                    <StackPanel Height="20">
                        <TextBlock Height="30" Text="收入" HorizontalAlignment="Center" />
                    </StackPanel>

                    <ListView x:ConnectionId='10'                                                                
                            IsItemClickEnabled="True"                                >
                        <ListView.ItemTemplate>
                            <DataTemplate                             >
                                <TextBlock x:ConnectionId='13' HorizontalAlignment="Center" VerticalAlignment="Center"                      />
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>

                    <StackPanel Height="20">
                        <TextBlock Height="30" Text="支出" HorizontalAlignment="Center" />
                    </StackPanel>

                    <ListView x:ConnectionId='11'                                                                 
                            IsItemClickEnabled="True"                                >
                        <ListView.ItemTemplate>
                            <DataTemplate                             >
                                <TextBlock x:ConnectionId='12' HorizontalAlignment="Center" VerticalAlignment="Center"                      />
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
                </StackPanel>
                <StackPanel Margin="5" Width="240" Height="400">
                    <TextBlock HorizontalAlignment="Center" Text="Accounts" Height="50"/>
                    <ListView x:ConnectionId='9'                                               IsItemClickEnabled="True"                               >
                        <ListView.ItemTemplate>
                            <DataTemplate                            >
                                <UserControl>
                                    <UserControl.Resources>
                                        <cv:AmountDisplayCvt x:Key="AmountDisplayCvt"/>
                                        <cv:DateDisplayCvt x:Key="DateDisplayCvt"/>
                                    </UserControl.Resources>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110" />
                                            <ColumnDefinition Width="70" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" HorizontalAlignment="Center" Text="{Binding createDate, Converter={StaticResource DateDisplayCvt}}" />
                                        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Text="{Binding amount, Converter={StaticResource AmountDisplayCvt}}" />
                                    </Grid>
                                </UserControl>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>

            <StackPanel Height="30"></StackPanel>

            <StackPanel HorizontalAlignment="Center" Height="200" Width="300">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="详细信息" FontSize="20" Margin="5"/>
                    <AppBarButton Icon="Setting" IsCompact="True" Margin="200,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <AppBarButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:ConnectionId='7' Text="Edit"                   />
                                <MenuFlyoutItem x:ConnectionId='8' Text="Delete"                     />
                            </MenuFlyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="类型：" />
                        <TextBlock x:ConnectionId='2' x:Name="category" Grid.Row="0" Grid.Column="1"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="金额：" />
                        <TextBlock x:ConnectionId='3' x:Name="amount" Grid.Row="1" Grid.Column="1"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="收入：" />
                        <TextBlock x:ConnectionId='4' x:Name="inOrOut" Grid.Row="2" Grid.Column="1"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="详情：" />
                        <TextBlock x:ConnectionId='5' x:Name="description" Grid.Row="3" Grid.Column="1"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="日期：" />
                        <TextBlock x:ConnectionId='6' x:Name ="date" Grid.Row="4" Grid.Column="1"/>
                        <TextBlock Grid.Row="1" Text="金额："/>

                    </Grid>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

